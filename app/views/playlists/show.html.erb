<p id="notice"><%= notice %></p>

<h2 class="show_sections">
  <strong>Name:</strong>
  <%= @playlist.name %>
</h2>

<p class="show_sections">
  <!-- <strong>Image:</strong> -->
  <% if (@playlist.image == "") %>
    <img class="image_show" src='http://www.wpclipart.com/signs_symbol/arrows/button_arrows/play_buttons/play_button.svg' alt:<%= @playlist.name %> >
  <% else %>
    <img class="image_show" src=<%= @playlist.image %> alt:<%= @playlist.name %> >
  <% end %>
</p>

<p class="show_sections">
  <strong>Playlist URL:</strong>
  <a href=<%= @playlist.url %>><%= (@playlist.url).truncate(43) %></a>
</p>

<% if !(@playlist.description == "") %>
  <p class="description show_sections">
      <strong>Description:</strong>
      <%= @playlist.description %>
  </p>
<% end %>

<!-- <p class="show_sections">
  <strong>Comment:</strong>
  <%= @playlist.comment %>
</p> -->
<div class="comment">
  <h3 class="new_review_head">New Review</h3>
</div>
<%= render 'reviews/form' %>

<h3>Reviews:</h3>

<% @playlist.reviews.each do |review| %>
  <div class="comment show_sections">
    <%= review.comment %>
    <br>
    <p class="timestamp">Added on: <%= review.created_at %></p>
  </div>
<% end %>

